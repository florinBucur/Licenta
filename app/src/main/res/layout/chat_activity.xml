<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ff0f69a2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/friend_picture_chat"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/initiate"

            android:layout_width="184dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/textsize"
            android:background="@drawable/buttons_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/initiateConversation"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/messagesize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <view
            android:id="@+id/chat_recycler_view"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#8c218ba2"
            android:divider="@drawable/divider"
            android:dividerHeight="16.0dp"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/send_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.01"
            android:textColor="@color/black"
            android:inputType="text" />

        <Button
            android:id="@+id/reply"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/com_facebook_button_send_icon" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <view

            android:id="@+id/groups_recycler_view"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="#ff0f69a2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textsize"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_group"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:background="@drawable/buttons_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/messagesize"
            android:text="@string/createGroup"
 />

        <EditText
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/buttons_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/messagesize"
            android:id="@+id/add_to_group"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Add to group" />

        <Button
            android:layout_marginStart="5dp"
            android:background="@drawable/buttons_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/messagesize"
            android:id="@+id/delete_from_group"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:text="Delete from group" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:background="@drawable/buttons_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/messagesize"
            android:id="@+id/delete_group"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Delete group" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></FrameLayout>
